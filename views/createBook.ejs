
    <h1>Book</h1>


<body>
    <div class="createBook">
        <form action="/book/create" method="POST">
            <label for="bookISBN">ISBN:</label>
            <input type="text" id="bookISBN" name="bookISBN" required>
            <br>
            <label for="bookName">Book Title:</label>
            <input type="text" id="bookName" name="bookName" required>
            <br>
            <label for="bookDescription">Description:</label>
            <input type="text" id="bookDescription" name="bookDescription" required>
            <br>
            <label for="bookPrice">Price:</label>
            <input type="number" id="bookPrice" name="bookPrice" required>
            <br>
            <label for="bookAuthor">Author:</label>
            <input type="text" id="bookAuthor" name="bookAuthor" required>
            <br>
            <label for="bookGenre">Genre:</label>
            <input type="text" id="bookGenre" name="bookGenre" required>
            <br>
            <label for="bookPublisher">Publisher:</label>
            <input type="text" id="bookPublisher" name="bookPublisher" required>
            <br>
            <label for="bookPublishedYear">Year Published:</label>
            <input type="number" id="bookPublishedYear" name="bookPublishedYear" required>
            <br>
            <label for="bookCopiesSold">Copies Sold:</label>
            <input type="number" id="bookCopiesSold" name="bookCopiesSold" required>
            <br>
            <label for="bookRating">Rating:</label>
            <input type="number" id="bookRating" name="bookRating" required>
            <br>
            <button>Create Book</button>
        </form>
    </div>
</body>
